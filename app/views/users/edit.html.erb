<h1>Editing User</h1>

<%= form_for @user do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :currentpassword %>
    <%= f.password_field :password %>
  </div>

  <div class="field">

  <div class="actions">
    <%= f.submit %>
  </div>

  STATISTICS BABY

<% end %>