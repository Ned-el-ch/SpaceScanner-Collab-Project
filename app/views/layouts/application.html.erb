<!DOCTYPE html>

<html>

    <head>

        <title>PortalScanner 3000</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%# javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    </head>

    <body>

        <% if current_user%>

            <div class="topnav">

                <a class="active" href="/">Home</a>
                <a href="/trips">My Bookings</a>
                <a href="/account">My Account</a>
                <%= link_to "Log Out", logout_path, class: 'logout' %>
            </div>

        <% else %>

            <div class="topnav">
                <a class="active" href="/">Home</a>
                <%= link_to "Sign Up", signup_path, class: 'signup'  %>
                <%= link_to "Log In", login_path, class: 'login'  %>

            </div>
            

        <% end%>

        <h1>PortalScanner 3000</h1>

        <% if request.path == "/"%>

            <%= render "/layouts/search_trips" %>

        <% end %>

        <%= yield %>
        <div class="stars"></div>
        <div class="twinkling"></div>
        <div class="clouds"></div>
    </body>

</html>
