<p id="alert"><%= alert %></p>
<h1>Login</h1>

<div class="login_page">
<%= form_tag sessions_path do |form| %>
  <div class="thing">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="thing">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
</div>
<% end %>